<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".views.MoviesActivity"
    tools:showIn="@layout/activity_movies"
    android:background="#e6e6e6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#e6e6e6">

        <Button
            android:text="Order By Top"
            android:id="@+id/topBtn"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelEstilo" />

    </LinearLayout>



    <fragment
        android:id="@+id/fragmentMovie"
        android:name="cl.kustom.peliculasapp.views.MoviesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>